---
import AppHeader from '@components/AppHeader.astro'
import AppFooter from '@components/AppFooter.astro'
import HeadBlock from './HeadBlock.astro'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <HeadBlock title={title} />
  <body>
    <script is:inline src="/theme-loader.js"></script>
    <div
      class="grid grid-rows-[auto_1fr_auto] justify-items-center w-full min-h-screen"
    >
      <AppHeader />
      <main
        class="main flex flex-col pb-4 px-4 w-full overflow-auto max-w-screen-xl"
        role="main"
      >
        <slot />
      </main>
      <AppFooter />
    </div>
    <style is:global>
      @import '@styles/tailwind.css';
    </style>
  </body>
</html>
